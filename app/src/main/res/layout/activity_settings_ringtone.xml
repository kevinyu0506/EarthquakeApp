<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    tools:context="tw.edu.bpmlab.mis.nccu.earthquakeapp.settings_eqinfo">



    <TextView
        android:id="@+id/ringtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RINGTONE"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="122dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="settings"
        android:textColor="#A6ffffff"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ringtone"
        android:layout_marginLeft="155dp"
        app:layout_constraintLeft_toLeftOf="parent" />





    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="490dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="101dp"
        android:background="@drawable/info_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/relativeLayout">


        <RelativeLayout
            android:layout_width="282dp"
            android:layout_height="470dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/info_inner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/relativeLayout3">

        </RelativeLayout>

        <TextView
            android:id="@+id/ringtoneList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignTop="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout3"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/relativeLayout3" />


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/return_arrow"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28.5dp"
        android:layout_marginLeft="13.5dp"
        android:background="#00000000"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="-13dp"
        app:layout_constraintLeft_toLeftOf="parent" />



</android.support.constraint.ConstraintLayout>

