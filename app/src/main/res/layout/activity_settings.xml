<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    tools:context="com.example.apple.earthquakeapp.settings">



    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.4dp"
        android:layout_marginLeft="118dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:text="SETTINGS"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="27dp" />

    <RelativeLayout
        android:id="@+id/notificationLayout"
        android:layout_width="309dp"
        android:layout_height="205dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="103dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/notification_frame">

        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13.595dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="58.61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#90ffffff"/>

        <TextView
            android:id="@+id/ringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ringtone"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="106.11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#90ffffff"/>

        <TextView
            android:id="@+id/magnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magnitude"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="157.11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#90ffffff"/>

        <TextView
            android:id="@+id/viberation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viberation"
            android:textSize="16dp"
            android:layout_marginLeft="154.5dp"
            android:layout_marginStart="154.5dp"
            android:layout_marginTop="58.61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#90ffffff"/>

        <ImageView
            android:id="@+id/ringtoneArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow"
            android:layout_alignBottom="@+id/ringtone"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

        <Switch
            android:id="@+id/alarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alarm"
            android:layout_alignBottom="@+id/alarm"
            android:layout_toRightOf="@+id/magnitude"
            android:layout_toEndOf="@+id/magnitude"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <Switch
            android:id="@+id/viberationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/viberation"
            android:layout_alignBottom="@+id/viberation"
            android:layout_alignRight="@+id/ringtoneArrow"
            android:layout_alignEnd="@+id/ringtoneArrow" />

        <ImageButton
            android:id="@+id/magnitude3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/magnitude_3"
            android:background="#00000000"
            android:layout_alignTop="@+id/magnitude"
            android:layout_alignBottom="@+id/magnitude"
            android:layout_alignEnd="@+id/alarmSwitch" />

        <ImageButton
            android:id="@+id/magnitude4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/magnitude_4"
            android:background="#00000000"
            android:layout_alignTop="@+id/magnitude"
            android:layout_alignBottom="@+id/magnitude"
            android:layout_toRightOf="@+id/magnitude3"
            android:layout_marginLeft="35dp"/>

        <ImageButton
            android:id="@+id/magnitude5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/magnitude_5"
            android:background="#00000000"
            android:layout_alignTop="@+id/magnitude"
            android:layout_alignBottom="@+id/magnitude"
            android:layout_toRightOf="@+id/magnitude4"
            android:layout_marginLeft="35dp"/>

        <ImageButton
            android:id="@+id/magnitude6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/magnitude_6"
            android:background="#00000000"
            android:layout_alignTop="@+id/magnitude"
            android:layout_alignBottom="@+id/magnitude"
            android:layout_toRightOf="@+id/magnitude5"
            android:layout_marginLeft="35dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gpsLayout"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="317dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/gps_frame">

        <TextView
            android:id="@+id/GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS"
            android:textSize="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8.95dp"
            android:textColor="#ffffff"/>

        <Switch
            android:id="@+id/gpsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statusLayout"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="362dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/status_frame">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10.45dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="54.61dp"
            android:textColor="#90ffffff"/>

        <TextView
            android:id="@+id/chargeMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charge mode"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="96.61dp"
            android:textColor="#90ffffff"
            android:layout_alignRight="@+id/status"
            android:layout_alignEnd="@+id/status" />

        <Switch
            android:id="@+id/wifiSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/wifi"
            android:layout_alignBottom="@+id/wifi"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Switch
            android:id="@+id/chargeModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chargeMode"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/helpLayout"
        android:layout_width="150dp"
        android:layout_height="205dp"
        android:layout_marginTop="317dp"
        android:layout_marginLeft="185dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/help_frame">


        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textSize="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10.75dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/earthquake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earthquake"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="58.61dp"
            android:textColor="#90ffffff"/>

        <TextView
            android:id="@+id/contactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="108.11dp"
            android:textColor="#90ffffff"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="155.61dp"
            android:textColor="#90ffffff"/>

        <ImageView
            android:id="@+id/eqInfoArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow"
            android:layout_alignBottom="@+id/earthquake"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:id="@+id/contactUsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow"
            android:layout_alignBottom="@+id/contactUs"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:id="@+id/aboutArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow"
            android:layout_alignBottom="@+id/about"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />


        <Button
            android:id="@+id/eqInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:alpha="0"
            android:layout_alignBaseline="@+id/earthquake"
            android:layout_alignBottom="@+id/earthquake"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
