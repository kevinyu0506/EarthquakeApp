<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    tools:context="com.example.apple.earthquakeapp.settings">


    <RelativeLayout
        android:id="@+id/notificationLayout"
        android:layout_width="309dp"
        android:layout_height="205dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="103dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/notification_frame">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gpsLayout"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="317dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="26dp"
        android:background="@drawable/gps_frame">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statusLayout"
        android:layout_width="150dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="362dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="26dp"
        android:background="@drawable/status_frame">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/helpLayout"
        android:layout_width="300px"
        android:layout_height="410px"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="634px"
        android:layout_marginLeft="369px"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/help_frame">

    <Button
        android:id="@+id/eqInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="120dp"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/settings"
        android:layout_width="249.21px"
        android:layout_height="59.7px"
        android:text="SETTINGS"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48.8px"
        android:layout_marginLeft="219.42px"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
